set nu
set tabstop=4
set fileencoding=utf-8
set encoding=utf-8
set langmenu=zh_CN.UTF-8
language message zh_CN.UTF-8
set shiftwidth=4
set tabstop=4
set cindent
set incsearch
set ruler
set cursorline
set expandtab
set ls=2
syntax on
colorscheme default

map <silent> <F3> <Esc>:He<cr>
map <silent> <F4> <Esc>:Ve<cr>
map <silent> <F5> <Esc>:Te<cr>

nmap ,s :source ~/.vimrc<cr>
